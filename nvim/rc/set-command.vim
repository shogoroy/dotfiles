" setting
set title
set fenc=utf-8
set noswapfile

" looks
set cursorline
set cursorcolumn
set list
set listchars=tab:»-,trail:-,extends:»,precedes:«,nbsp:%
set scrolloff=4
set cmdheight=2
set number

" set cursor
set virtualedit=onemore

" tab etc.
set tabstop=4
set softtabstop=4
set autoindent
set smartindent

" BS
set backspace=indent,eol,start

" search
set ignorecase
set smartcase
set wrapscan
set incsearch
set inccommand=split

